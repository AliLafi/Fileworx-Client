@model IEnumerable<FileworxWebApp.Models.ContactModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>


            <th>
                @Html.DisplayNameFor(model => model.ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.LastModifier)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Creator)
            </th>
            <th>
                Access
            </th>

            <th></th>


        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>

                <td>
                    @Html.DisplayFor(modelItem => item.ID)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LastModifier)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Creator)
                </td>
                @if (item.IsRead && item.IsWrite)
                {
                    <td>Read/Write</td>


                }
                else if (item.IsWrite)
                {
                    <td>Write</td>
                }
                else
                {
                    <td>
                        Read
                    </td>
                }

                <td>
                    <a class="btn btn-primary" role="button" href="Contact/Edit/@item.ID">
                        <i class="bi bi-pencil-square"></i>
                    </a>

                    <a class="btn btn-danger" role="button" href="Contact/Delete/@item.ID">
                        <i class="bi bi-trash3"></i>
                    </a>

                    <a class="btn btn-secondary" role="button" href="Contact/Details/@item.ID">
                        <i class="bi bi-info"></i>
                    </a>
                </td>

            </tr>
        }
    </tbody>
</table>
